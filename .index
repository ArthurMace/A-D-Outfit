"use client";
import { useState } from "react";
import Produto from "../../components/Produto";
import Carrinho from "../../components/Carrinho";
import { produtosHomens } from "../../lib/produtos";

export default function Homens() {
  const [cart, setCart] = useState([]);

  return (
    <main style={{ padding: 20 }}>
      <h1>Masculino</h1>

      <div style={grid}>
        {produtosHomens.map((item) => (
          <Produto key={item.id} item={item} add={(i) => setCart([...cart, i])} />
        ))}
      </div>

      {cart.length > 0 && <Carrinho items={cart} />}
    </main>
  );
}

const grid = {
  display: "flex",
  gap: 20,
  flexWrap: "wrap"
};

